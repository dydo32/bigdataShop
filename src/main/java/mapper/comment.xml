<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.kitri.bigdataShop.productcomment">
	<insert id="insert" parameterType="prdcmt">
		insert into pro_comment 
		values(#{prd_no}, #{mem_id}, #{pro_comment}, sysdate)
	</insert>
	
	<delete id="delete" parameterType="prdcmt">
		delete from pro_comment
	</delete>

	<select id="cmtlist" resultType="prdcmt">
		select * from pro_comment
	</select> 
</mapper>




